###############################################################################
#                               NetCOBOL
###############################################################################

COBFLAGS=-WC,OPTIMIZE
LINKOPTION =

ALL : COLLECT.DLL

REBUILD : CLEAN ALL
CLEAN :
	DEL "COLLECT.DLL" 
	DEL "COLLECT.LIB" 
	DEL "COLLECT.OBJ" 
	DEL "COLLECT.EXP" 
	DEL "COLLECT.REP"
	DEL "LIST.OBJ" 
	DEL "LIST.REP" 
	DEL "D_NODE.OBJ" 
	DEL "DICTIONARYNODE-CLASS.REP" 
	DEL "DICT.OBJ" 
	DEL "DICT.REP" 
	DEL "L_NODE.OBJ" 
	DEL "LISTNODE-CLASS.REP" 
	DEL "BIN_TREE.OBJ" 
	DEL "BINARYTREE-CLASS.REP" 

"LIST.OBJ" : "LIST.COB" "COLLECT.REP" "LISTNODE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "LIST.COB"

"LIST.REP" : "LIST.COB" "COLLECT.REP" "LISTNODE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "LIST.COB"

"COLLECT.OBJ" : "COLLECT.COB" "BINARYTREE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "COLLECT.COB"

"COLLECT.REP" : "COLLECT.COB" "BINARYTREE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "COLLECT.COB"

"D_NODE.OBJ" : "D_NODE.COB" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "D_NODE.COB"

"DICTIONARYNODE-CLASS.REP" : "D_NODE.COB" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "D_NODE.COB"

"DICT.OBJ" : "DICT.COB" "COLLECT.REP" "DICTIONARYNODE-CLASS.REP" "BINARYTREE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "DICT.COB"

"DICT.REP" : "DICT.COB" "COLLECT.REP" "DICTIONARYNODE-CLASS.REP" "BINARYTREE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "DICT.COB"

"L_NODE.OBJ" : "L_NODE.COB" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "L_NODE.COB"

"LISTNODE-CLASS.REP" : "L_NODE.COB" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "L_NODE.COB"

"BIN_TREE.OBJ" : "BIN_TREE.COB" "DICTIONARYNODE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "BIN_TREE.COB"

"BINARYTREE-CLASS.REP" : "BIN_TREE.COB" "DICTIONARYNODE-CLASS.REP" "MAKEFILE"
	COBOL32.EXE $(COBFLAGS) "BIN_TREE.COB"

"COLLECT.DLL" : "LIST.OBJ" "COLLECT.OBJ" "D_NODE.OBJ" "DICT.OBJ" "L_NODE.OBJ" "BIN_TREE.OBJ" 
	LINK.EXE $(LINKOPTION) \
	/DYNAMICBASE:NO \
	/DLL /NOENTRY \
	/OUT:"COLLECT.DLL" \
	"LIST.OBJ" \
	"COLLECT.OBJ" \
	"D_NODE.OBJ" \
	"DICT.OBJ" \
	"L_NODE.OBJ" \
	"BIN_TREE.OBJ" \
	"KERNEL32.LIB" \
	"F3BICIMP.LIB"

"COLLECT.LIB" : "LIST.OBJ" "COLLECT.OBJ" "D_NODE.OBJ" "DICT.OBJ" "L_NODE.OBJ" "BIN_TREE.OBJ" 
	LINK.EXE $(LINKOPTION) \
	/DYNAMICBASE:NO \
	/DLL /NOENTRY \
	/OUT:"COLLECT.DLL" \
	"LIST.OBJ" \
	"COLLECT.OBJ" \
	"D_NODE.OBJ" \
	"DICT.OBJ" \
	"L_NODE.OBJ" \
	"BIN_TREE.OBJ" \
	"KERNEL32.LIB" \
	"F3BICIMP.LIB"
