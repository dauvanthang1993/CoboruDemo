###############################################################################
#                               NetCOBOL
###############################################################################

COBFLAGS=-WC,SRF(FREE,FREE)
LINKOPTION =

ALL : SAMPLE5.EXE INSATSU.DLL

REBUILD : CLEAN ALL
CLEAN :
	DEL "SAMPLE5.EXE"
	DEL "SAMPLE5.OBJ"
	DEL "SAMPLE5.TMP"
	DEL "INSATSU.DLL"
	DEL "INSATSU.LIB"
	DEL "INSATSU.OBJ"
	DEL "INSATSU.EXP"

"SAMPLE5.OBJ" : "..\SAMPLE05_EXE\SAMPLE5.COB" "..\SAMPLE05_LIB\S_REC.CBL" "MAKEFILE"
	COBOL32.EXE -do. -I..\SAMPLE05_LIB $(COBFLAGS) -M "..\SAMPLE05_EXE\SAMPLE5.COB"

"SAMPLE5.EXE" : "SAMPLE5.OBJ" "INSATSU.DLL"
	"LINK.EXE" $(LINKOPTION) \
	/DYNAMICBASE:NO \
	/OUT:"SAMPLE5.EXE" \
	"SAMPLE5.OBJ" \
	"INSATSU.LIB" \
	"F3BICIMP.LIB" \
	"MSVCRT.LIB" 

"INSATSU.OBJ" : "..\SAMPLE05_DLL\INSATSU.COB" "..\SAMPLE05_LIB\S_REC.CBL" "MAKEFILE"
	COBOL32.EXE -do. -I..\SAMPLE05_LIB $(COBFLAGS) "..\SAMPLE05_DLL\INSATSU.COB"

"INSATSU.DLL" : "INSATSU.OBJ"
	"LINK.EXE" $(LINKOPTION) \
	/DYNAMICBASE:NO \
	/DLL /NOENTRY \
	/OUT:"INSATSU.DLL" \
	"INSATSU.OBJ" \
	"F3BICIMP.LIB"
