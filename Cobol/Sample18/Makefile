###############################################################################
#                               NetCOBOL
###############################################################################

COBFLAGS=-WC,OPTIMIZE
LINKOPTION =

ALL : "MAIN.EXE" 

REBUILD : CLEAN ALL
CLEAN :
	DEL "MAIN.EXE" 
	DEL "MAIN.EXP" 
	DEL "MAIN.LIB" 
	DEL "MAIN.OBJ" 
	DEL "CTL_MEMB.OBJ" 
	DEL "CONTROL-MEMBER-CLASS.REP" 
	DEL "MANAGER.OBJ" 
	DEL "MANAGER-CLASS.REP" 
	DEL "SALA_MAN.OBJ" 
	DEL "BONU_MAN.OBJ" 
	DEL "MEMBER.OBJ" 
	DEL "MEMBER-CLASS.REP" 
	DEL "SALA_MEM.OBJ" 
	DEL "ALLMEM.OBJ" 
	DEL "ALLMEMBER-CLASS.REP" 
	DEL "ADDRESS.OBJ" 
	DEL "ADDRESS-CLASS.REP" 


"MAIN.OBJ" : "MAIN.COB" "ADDRESS-CLASS.REP" "CONTROL-MEMBER-CLASS.REP" "ALLMEMBER-CLASS.REP"
	COBOL32.EXE -M -R"..\SAMPLE16" "MAIN.COB"

"CTL_MEMB.OBJ" : "CTL_MEMB.COB" "ADDRESS-CLASS.REP" "ALLMEMBER-CLASS.REP" "MEMBER-CLASS.REP" "MANAGER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "CTL_MEMB.COB"

"CONTROL-MEMBER-CLASS.REP" : "CTL_MEMB.COB" "ADDRESS-CLASS.REP" "ALLMEMBER-CLASS.REP" "MEMBER-CLASS.REP" "MANAGER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "CTL_MEMB.COB"

"MANAGER.OBJ" : "MANAGER.COB" "ALLMEMBER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "MANAGER.COB"

"MANAGER-CLASS.REP" : "MANAGER.COB" "ALLMEMBER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "MANAGER.COB"

"SALA_MAN.OBJ" : "SALA_MAN.COB" "MANAGER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "SALA_MAN.COB"

"BONU_MAN.OBJ" : "BONU_MAN.COB" "MANAGER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "BONU_MAN.COB"

"MEMBER.OBJ" : "MEMBER.COB" "ALLMEMBER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "MEMBER.COB"

"MEMBER-CLASS.REP" : "MEMBER.COB" "ALLMEMBER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "MEMBER.COB"

"SALA_MEM.OBJ" : "SALA_MEM.COB" "MEMBER-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "SALA_MEM.COB"

"ALLMEM.OBJ" : "ALLMEM.COB" "ADDRESS-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "ALLMEM.COB"

"ALLMEMBER-CLASS.REP" : "ALLMEM.COB" "ADDRESS-CLASS.REP" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "ALLMEM.COB"

"ADDRESS.OBJ" : "ADDRESS.COB" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "ADDRESS.COB"

"ADDRESS-CLASS.REP" : "ADDRESS.COB" 
	COBOL32.EXE -NM -R"..\SAMPLE16" "ADDRESS.COB"

"MAIN.EXE" : "MAIN.OBJ" "CTL_MEMB.OBJ" "MANAGER.OBJ" "SALA_MAN.OBJ" "BONU_MAN.OBJ" "MEMBER.OBJ" "SALA_MEM.OBJ" "ALLMEM.OBJ" "ADDRESS.OBJ"
	"LINK.EXE" $(LINKOPTION) \
	/DYNAMICBASE:NO \
	/OUT:"MAIN.EXE" \
	"MAIN.OBJ" \
	"CTL_MEMB.OBJ" \
	"MANAGER.OBJ" \
	"SALA_MAN.OBJ" \
	"BONU_MAN.OBJ" \
	"MEMBER.OBJ" \
	"SALA_MEM.OBJ" \
	"ALLMEM.OBJ" \
	"ADDRESS.OBJ" \
	"..\SAMPLE16\COLLECT.LIB" \
	"F3BICIMP.LIB" \
	"MSVCRT.LIB" 


